#:kivy 1.0.9


<Example>:
    BoxLayout:
        size: 600, 200
        GridLayout:
            canvas:
                Color:
                    rgb: .3, .3, .3   
                Rectangle:
                    pos: 0, 0
                    size: self.width, self.height
            cols: 2
            size_hint: 0.5, 1.0
            Label:
                text: 'AA'
            TextInput:
                text: 'BB'
                multiline: False
                on_text : print('Got text', self.text)
            Button:
                text: 'start'
                on_press: print('Button press')
            Label:
                text: str(sliderA.value)
            Slider:
                min: 0
                max: 1
                value: 0
                id: sliderA
            Slider:
                min: 0
                max: 1
                value: 0
                id: sliderB

    
    
