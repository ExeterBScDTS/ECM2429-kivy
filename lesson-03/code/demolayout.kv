#:kivy 1.0.9

# Notes
# -----
# Line comments, like these, can be used.
# Indentation matters.
# Python statments, e.g. print() are allowed, 
# and are useful for testing.

<MyTextInput>:
    label_text: ""
    Label:  
        pos: root.pos
        size: root.width/2, root.height
        text: root.label_text
    TextInput:
        pos: root.x + root.width/2, root.y
        size: root.width/2, root.height
        text: ""
        multiline: False
        on_text: root.print_text(self.text)

<Example>:
    BoxLayout:
        size: 600, 600
        GridLayout:
            canvas:
                Color:
                    rgb: .3, .3, .3   
                Rectangle:
                    pos: 0, 0
                    size: self.size
            cols: 2
            Label:
                text: 'A label'
            Button:
                text: 'A button'
                on_press: print('Button pressed')
            Label:
                canvas.before:
                    Color:
                        rgb: .5, .2, .2
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Another label'
            MyTextInput:
                id: textA
                label_text: 'Composite widget'
            Slider:
                min: 0
                max: 10
                value: 0
                id: sliderA
            Label:
                text: "Slider value: " + str(int(sliderA.value))
            Button:
                text: 'Button 2'
                on_press: print('Button 2 pressed')
            Button:
                text: 'Button 3'
                on_press: print('Button 3 pressed')
            
            

    
    
